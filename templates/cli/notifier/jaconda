  ##
  # Jaconda [Notifier]
  #
  notify_by Jaconda do |jaconda|
    jaconda.subdomain   = '<your subdomain>.jaconda.im'
    jaconda.room_token  = 'room token'
    jaconda.room_id     = 'room id'
    jaconda.sender_name = 'sender name'
    jaconda.on_success  = true
    jaconda.on_warning  = true
    jaconda.on_failure  = true
  end
